pipeline {
    agent any

    stages {
        stage('Python Installation') {
            steps {
                sh '''#!/bin/bash
                    apt-get update
                    apt-get install -y python3 python3-venv python3-pip
                '''
            }
        }

        stage('Setup Virtual Environment') {
            steps {
                dir('Python/My_Pytest_Project') {
                    sh '''#!/bin/bash
                        python3 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                    '''
                }
            }
        }

        stage('Deployment - Install Dependencies') {
            steps {
                dir('Python/My_Pytest_Project/requirements.txt') {
                    sh '''#!/bin/bash
                        . venv/bin/activate
                        pip install -r requirements.txt
                    '''
                }
            }
        }

        stage('Test Stage 1') {
            steps {
                dir('Python/My_Pytest_Project') {
                    sh '''#!/bin/bash
                        . venv/bin/activate
                        pytest tests/test_part1.py
                    '''
                }
            }
        }

        stage('Test Stage 2') {
            steps {
                dir('Python/My_Pytest_Project') {
                    sh '''#!/bin/bash
                        . venv/bin/activate
                        pytest tests/test_part2.py
                    '''
                }
            }
        }

        stage('Test Stage 3') {
            steps {
                dir('Python/My_Pytest_Project') {
                    sh '''#!/bin/bash
                        . venv/bin/activate
                        pytest tests/test_part3.py
                    '''
                }
            }
        }
    }
}
